<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relaxingsea"
    tools:context="com.example.omri.ochat.ChatActivity">

    <TextView
        android:id="@+id/ChatScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/InputFrag2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <fragment
        android:id="@+id/InputFrag2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:name="layout.InputFragment"
        tools:layout="@layout/fragment_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
